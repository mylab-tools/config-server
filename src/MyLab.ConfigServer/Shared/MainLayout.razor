@inherits LayoutComponentBase

<main>
    <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 300px;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <img class="me-2" src="images/tools.svg" width="30" height="30" />
            <span class="fs-4">MyLab Config Server</span>
        </a>
        <hr>
        <NavMenu />
    </div>
    <div class="d-flex flex-column flex-grow-1">
        <nav class="navbar navbar-expand-lg navbar-light bg-light px-3">
            <a class="navbar-brand" href="#">Configurations</a>
        </nav>
        <div class="flex-shrink-0 p-3">
            @Body
        </div>
        <footer class="footer mt-auto py-3 bg-light px-3">
            <div class="d-flex flex-row">
                <span class="text-muted me-auto">MyLab.ConfigServer @("v" + typeof(MyLab.ConfigServer.Program).Assembly.GetName().Version.ToString(3))</span>
                <span class="ms-auto">
                    <a href="https://github.com/ozzy-ext-mylab/mylab-config-server">Star and fork me on Github</a>
                </span>
            </div>
        </footer>
    </div>
</main>